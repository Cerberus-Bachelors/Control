<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="leg_macro" params="
      leg_name
      parent_link
      gearbox_offset
      connector_xyz:='0.35 0.08 0'
      connector_rpy:='0 1.5707963267948966 0'
    ">
    <joint name="${leg_name}_leg_connector" type="fixed">
      <parent link="${parent_link}" />
      <child link="${leg_name}_gearbox_shoulder" />
      <origin xyz="${connector_xyz}" rpy="${connector_rpy}" />
    </joint>

    <link name="${leg_name}_gearbox_shoulder">
      <visual>
        <geometry>
          <cylinder radius="0.055" length="0.1" />
        </geometry>
        <material name="purple">
          <color rgba="0.43 0.27 0.52 1" />
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.055" length="0.1" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.8" />
        <inertia ixx="0.01" iyy="0.01" izz="0.01"
                 ixy="0" ixz="0" iyz="0" />
      </inertial>
    </link>

    <joint name="${leg_name}_shoulder_connector" type="revolute">
      <parent link="${leg_name}_gearbox_shoulder" />
      <child link="${leg_name}_gearbox_shoulder2" />
      <origin xyz="0 0 ${gearbox_offset}" rpy="1.5707963267948963 0 0" />
      <axis xyz="0 1 0" />
      <limit effort="200.0" velocity="2.0" lower="-1.57" upper="1.57" />
    </joint>

    <link name="${leg_name}_gearbox_shoulder2">
      <visual>
        <origin xyz="0 0 -0.0175" />
        <geometry>
          <cylinder radius="0.055" length="0.1" />
        </geometry>
        <material name="purple">
          <color rgba="0.43 0.27 0.52 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 -0.0175" />
        <geometry>
          <cylinder radius="0.055" length="0.1" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.8" />
        <inertia ixx="0.01" iyy="0.01" izz="0.01"
                 ixy="0" ixz="0" iyz="0" />
      </inertial>
    </link>

    <joint name="${leg_name}_shoulder_leg" type="revolute">
      <parent link="${leg_name}_gearbox_shoulder2" />
      <child link="${leg_name}_upper_leg" />
      <origin xyz="0 0 -0.138" rpy="1.5707963267948963 0 0" />
      <axis xyz="0 1 0" />
      <limit effort="200.0" velocity="2.0" lower="-1.57" upper="1.57" />
    </joint>

    <link name="${leg_name}_upper_leg">
      <visual>
        <origin xyz="0 0 0.15" />
        <geometry>
          <cylinder radius="0.055" length="0.3" />
        </geometry>
        <material name="purple">
          <color rgba="0.43 0.27 0.52 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.15" />
        <geometry>
          <cylinder radius="0.055" length="0.3" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.8" />
        <inertia ixx="0.01" iyy="0.01" izz="0.01"
                 ixy="0" ixz="0" iyz="0" />
      </inertial>
    </link>

    <joint name="${leg_name}_knee" type="revolute">
      <parent link="${leg_name}_upper_leg" />
      <child link="${leg_name}_lower_leg" />
      <origin xyz="0 0 0.3" rpy="0 0 0" />
      <axis xyz="0 1 0" />
      <limit effort="200.0" velocity="2.0" lower="-1.57" upper="1.57" />
    </joint>

    <link name="${leg_name}_lower_leg">
      <visual>
        <origin xyz="0 0 0.15" />
        <geometry>
          <cylinder radius="0.035" length="0.3" />
        </geometry>
        <material name="purple">
          <color rgba="0.43 0.27 0.52 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.15" />
        <geometry>
          <cylinder radius="0.035" length="0.3" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.8" />
        <inertia ixx="0.01" iyy="0.01" izz="0.01"
                 ixy="0" ixz="0" iyz="0" />
      </inertial>
    </link>

  </xacro:macro>
</robot>
